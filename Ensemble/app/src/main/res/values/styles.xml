    <style name="dataText" >
        <!-- Customize your theme here. -->
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">3dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxWidth">160dp</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>

    </style>

    <style name="dataText_not_selectable" >
        <!-- Customize your theme here. -->
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">3dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxWidth">160dp</item>

    </style>

    <style name="dataAttrText" >
        <!-- Customize your theme here. -->
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">3dp</item>
        <item name="android:paddingStart">15dp</item>
    </style>

    <style name="headerTableText" >
        <!-- Customize your theme here. -->
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">30dp</item>
    </style>
    <style name="headerInfoText" >
        <!-- Customize your theme here. -->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:paddingStart">20dp</item>
    </style>
    <style name="subHeaderInfoText" >
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/red_gray</item>
        <item name="android:background">@color/paper</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">30dp</item>
    </style>
    <style name="tableRow" >
        <!-- Customize your theme here. -->
        <item name="android:layout_marginTop">2dp</item>

    </style>
    <style name="info_header_tableRow" >
        <!-- Customize your theme here. -->
        <item name="android:background">@color/red_gray</item>

    </style>
    <style name="info_table" >
        <!-- Customize your theme here. -->
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginBottom">15dp</item>


    </style>

    <style name="dropdown">

            <item name="android:background">@drawable/shape_radius20_gray</item>
    </style>

    <style name="spinner_item">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:paddingStart">10dp</item>

    </style>
    <style name="shadow_outer">
        <item name="android:layout_marginTop">-15dp</item>
        <item name="android:layout_marginBottom">-20dp</item>
