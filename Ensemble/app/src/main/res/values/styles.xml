    </style>
    <style name="date_picker_dark_orange" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="edit_text_side">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:scrollHorizontally">true</item>



    </style>

    <style name="button_date_picker" >
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">40dp</item>

    </style>

    <style name="big_hint" >
        <!-- Customize your theme here. -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">24sp</item>

    </style>

    <style name="big_ban_input" >
        <!-- Customize your theme here. -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/border_dark_red_radius</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">24sp</item>

    </style>

    <style name="Dialog.NoTitle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="dialogRootLayout" >
                <item name="android:layout_marginTop">15dp</item>
    </style>

