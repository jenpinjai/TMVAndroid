<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="truecorp.ensemble.AdjustmentActivity">

    <include layout="@layout/title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="48dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:background="@color/white"
            android:stretchColumns="3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/textViewBan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="Ban "
                    android:textAlignment="textEnd"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="35dp" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_column="2"
                    android:text="*"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="18dp"/>

                <EditText
                    android:id="@+id/adjustBan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="3"
                    android:background="@color/paper"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/black"
                    android:textCursorDrawable="@drawable/cursor_style"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/textViewSubscriberNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="Subscriber No "
                    android:textAlignment="textEnd"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="35dp" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_column="2"
                    android:text="*"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="18dp"/>

                <EditText
                    android:id="@+id/adjustSubscriberNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="3"
                    android:background="@color/paper"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/black"
                    android:textCursorDrawable="@drawable/cursor_style"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/textViewReason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="Reason "
                    android:textAlignment="textEnd"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="35dp" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_column="2"
                    android:text="*"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="18dp"/>

                <Spinner
                    android:id="@+id/adjustReason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/dropdown"
                    android:visibility="visible"
                    tools:layout_editor_absoluteX="parent"
                    tools:layout_editor_absoluteY="parent" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/textViewInvoicePeriod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="Invoice Period "
                    android:textAlignment="textEnd"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="35dp" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_column="2"
                    android:text="*"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="18dp"/>

                <EditText
                    android:id="@+id/adjustSearchInvoicePeriod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="3"
                    android:background="@color/paper"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/black"
                    android:textCursorDrawable="@drawable/cursor_style"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/textViewAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="Amount "
                    android:textAlignment="textEnd"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="35dp" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_column="2"
                    android:text="*"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="18dp"/>

                <EditText
                    android:id="@+id/adjustAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="3"
                    android:background="@color/paper"
                    android:inputType="number"
                    android:textColor="@android:color/black"
                    android:textCursorDrawable="@drawable/cursor_style"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/textViewCreditNoteNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="Credit Note No "
                    android:textAlignment="textEnd"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="35dp" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_column="2"
                    android:text=""
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="18dp"/>

                <EditText
                    android:id="@+id/adjustCreditNoteNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="3"
                    android:background="@color/paper"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/black"
                    android:textCursorDrawable="@drawable/cursor_style"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </TableRow>

            <TableRow>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_span="3">

                    <Button
                        android:id="@+id/adjustSaveBtn"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="3"
                        android:background="@drawable/onbluebtntouch"
                        android:text="Save"
                        android:textColor="@color/white" />
                </LinearLayout>
            </TableRow>

        </TableLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/alertMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
